{    
    "compilerOptions": {
        "target": "ES2019",
        "module": "commonjs",
        "outDir": "./build",
        "lib": ["ES2019", "dom"],
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "inlineSourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "skipLibCheck": true
    },
    "include": [ "./src/**/*.ts"],
    "exclude": ["node_modules", "build"]
}